            <field name="parent_id" ref="product_category_non_pertamina"/>
        </record>

        <record id="product_category_pulsa" model="product.category">
            <field name="name">Pulsa</field>
            <field name="parent_id" ref="product_category_non_pertamina"/>
        </record>

        <record id="product_category_token" model="product.category">
            <field name="name">Token Listrik</field>
